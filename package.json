{
  "name": "codify",
  "displayName": "Codify",
  "description": "AI autocomplete, refactoring and advanced code generation",
  "publisher": "smallcloud",
  "icon": "logo-small.png",
  "galleryBanner": {
    "color": "#000000",
    "theme": "dark"
  },
  "homepage": "https://codify.smallcloud.ai",
  "author": "Codify <info@smallcloud.ai> (https://codify.smallcloud.ai)",
  "version": "1.0.6",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:codify-presets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Codify",
      "properties": {
        "codify.apiKey": {
          "type": "string",
          "default": null,
          "description": "Secret API Key. It's used to authenticate your requests."
        },
        "codify.infurl": {
          "type": "string",
          "description": "For self-hosted inference, set the URL to your inference server, for example http://127.0.0.1:8008/\nLeave blank otherwise.",
          "default": ""
        },
        "codify.lang": {
          "*": {
            "type": "boolean",
            "default": true,
            "description": "Enable plugin for this language"
          }
        }
      }
    },
    "properties": [],
    "commands": [
      {
        "command": "plugin-vscode.highlight",
        "title": "Ask Intent and Highlight",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.login",
        "title": "Login",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.logout",
        "title": "Logout",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.editChaining",
        "title": "Edit Chaining",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.openSettings",
        "title": "Settings Page",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.openLogin",
        "title": "Login / Register",
        "category": "Codify"
      }
    ],
    "keybindings": [
      {
        "command": "plugin-vscode.highlight",
        "key": "F1"
      },
      {
        "command": "plugin-vscode.editChaining",
        "key": "Ctrl+Q"
      },
      {
        "command": "plugin-vscode.esc",
        "key": "escape",
        "when": "codify.runEsc"
      },
      {
        "command": "plugin-vscode.tab",
        "key": "tab",
        "when": "codify.runTab"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codify-pane",
          "title": "Codify",
          "icon": "$(codify-logo)"
        }
      ]
    },
    "views": {
      "codify-pane": [
        {
          "type": "webview",
          "id": "codify-presets",
          "name": "Presets"
        }
      ]
    },
    "icons": {
      "codify-logo": {
        "description": "codify logo",
        "default": {
          "fontPath": "./assets/codify.woff",
          "fontCharacter": "\\41"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "dependencies": {
    "diff": "^5.1.0",
    "fetch-h2": "^3.0.2"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "esbuild": "^0.16.3",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
