{
  "name": "codify",
  "displayName": "Codify",
  "description": "AI autocomplete, refactoring and advanced code generation",
  "publisher": "smallcloud",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallcloudai/plugin-vscode"
  },
  "icon": "logo-small.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "author": "Codify <codify@smallcloud.ai> (https://codify.smallcloud.ai)",
  "version": "0.0.14",
  "engines": {
    "vscode": "^1.69.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:codify-presets"
  ],
  "badges": [
    {
      "url": "https://img.shields.io/github/stars/smallcloudai/plugin-vscode?style=social",
      "description": "Github Stars",
      "href": "https://smallcloud.ai"
    }
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Codify",
      "properties": {
        "codify.personalizeAndImprove": {
          "type": "boolean",
          "default": null,
          "description": "Personalize / Improve model: use the changes to code that I accept or reject to personalize for me and generally improve the model behind Codify"
        },
        "codify.apiKey": {
          "type": "string",
          "default": null,
          "description": "API Key"
        },
        "codify.lang": {
          "*": {
            "type": "boolean",
            "default": true,
            "description": "Enable plugin for this language"
          }
        },
        "codify.temperature": {
          "type": "number",
          "default": 0.2,
          "minimum": 0,
          "maximum": 0.8,
          "description": "Temperature (0.0 - 0.8)"
        }
      }
    },
    "commands": [
      {
        "command": "plugin-vscode.highlight",
        "title": "Ask Intent and Highlight",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.login",
        "title": "Login",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.logout",
        "title": "Logout",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.editChaining",
        "title": "Edit Chaining",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.openSettings",
        "title": "Settings Page",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.openLogin",
        "title": "Login / Register",
        "category": "Codify"
      }
    ],
    "properties": [
      {
        "id": "plugin-vscode.contrastUrl",
        "title": "Use CONTRAST model at this URL",
        "type": "string",
        "default": "https://inference.smallcloud.ai/v1/contrast"
      }
    ],
    "keybindings": [
      {
        "command": "plugin-vscode.highlight",
        "key": "F1"
      },
      {
        "command": "plugin-vscode.esc",
        "key": "escape",
        "when": "codify.runEsc"
      },
      {
        "command": "plugin-vscode.tab",
        "key": "tab",
        "when": "codify.runTab"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codify-pane",
          "title": "Codify",
          "icon": "$(codify-logo)"
        }
      ]
    },
    "views": {
      "codify-pane": [
        {
          "type": "webview",
          "id": "codify-presets",
          "name": "Presets"
        }
      ]
    },
    "icons": {
      "codify-logo": {
        "description": "codify logo",
        "default": {
          "fontPath": "./assets/codify.woff",
          "fontCharacter": "\\41"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  }
}

