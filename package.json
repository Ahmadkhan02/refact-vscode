{
  "name": "codify",
  "displayName": "Codify",
  "description": "AI autocomplete, refactoring and advanced code generation",
  "publisher": "smallcloud",
  "icon": "logo-small.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "author": "Codify <codify@smallcloud.ai> (https://codify.smallcloud.ai)",
  "repository": {
    "type": "git",
    "url": "https://github.com/smallcloudai/plugin-vscode"
  }, 
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.69.0"
  },
  
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
 ],
  "activationEvents": [
    "onStartupFinished",
    "onView:codify-presets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Codify",
      "properties": {
        "codify.model": {
          "type": "string",
          "default": "CONTRASTcode/large/stable",
          "enum": [
            "CONTRASTcode/large/debug",
            "CONTRASTcode/large/stable"
          ],
          "description": "Model Name"
        },
        "codify.temperature": {
            "type": "number",
            "default": 0.2,
            "minimum": 0.0,
            "maximum": 0.8,
            "description": "Temperature (0.0 - 0.8)"
        },
        "codify.debugMode": {
            "type": "boolean",
            "default": 0,
            "description": "Debug Mode"
        }
      }
    },
    "commands": [
      {
        "command": "plugin-vscode.highlight",
        "title": "Ask Intent and Highlight",
        "category": "Codify"
      },
      {
        "command": "plugin-vscode.editChaining",
        "title": "Edit Chaining",
        "category": "Codify"
      }
    ],
    "properties": [
      {
        "id": "plugin-vscode.contrastUrl",
        "title": "Use CONTRAST model at this URL",
        "type": "string",
        "default": "https://inference.smallcloud.ai/v1/contrast"
      }
    ],
    "keybindings": [
      {
        "command": "plugin-vscode.highlight",
        "key": "F1"
      },
      {
        "command": "plugin-vscode.editChaining",
        "key": "F2"
      },
      {
        "command": "plugin-vscode.esc",
        "key": "escape",
        "when": "codify.runEsc"
      },
      {
        "command": "plugin-vscode.tab",
        "key": "tab",
        "when": "codify.runTab"
      }
    ],
    "viewsContainers": {
        "activitybar": [
          {
            "id": "codify-pane",     
            "title": "Codify",
            "icon": "$(heart)"
          }
        ]
    },
    "views": {
        "codify-pane": [
            {
                "type": "webview",
                "id": "codify-presets",
                "name": "Codify Presets"
            }
        ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "diff": "^5.0.0",
    "fetch-h2": "2"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/vscode": "^1.69.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "diff": "^5.0.0",
    "eslint": "^8.18.0",
    "fetch-h2": "2",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  }
}
